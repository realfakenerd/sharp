{
	"name": "sharp",
	"version": "0.0.1",
	"description": "CLI commands to sharpen you vision ;)",
	"main": "bin/index.js",
	"scripts": {
		"lint": "wireit",
		"format": "wireit",
		"prebuild": "wireit",
		"build": "wireit"
	},
	"wireit": {
		"format": {
			"command": "prettier --cache --write .",
			"files": [
				"prettier.config.js",
				"."
			]
		},
		"lint": {
			"command": "eslint --color --cache --cache-location .eslintcache .",
			"dependencies": [
				"format"
			],
			"files": [
				"src/**/*.ts",
				".eslintignore",
				".eslintrc.cjs"
			],
			"output": []
		},
		"build": {
			"command": "rollup -c rollup.config.js",
			"dependencies": [
				"prebuild"
			],
			"clean": "if-file-deleted",
			"files": [
				"dist/**/*.js"
			],
			"output": [
				"bin/index.js"
			]
		},
		"prebuild": {
			"command": "tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.ts",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				".tsbuildinfo"
			]
		}
	},
	"bin": {
		"sharp": "./bin/index.js"
	},
	"keywords": [],
	"author": "",
	"type": "module",
	"license": "ISC",
	"dependencies": {
		"@commander-js/extra-typings": "github:commander-js/extra-typings",
		"colorette": "^2.0.20",
		"commander": "^11.1.0",
		"figlet": "^1.6.0",
		"nanospinner": "^1.1.0",
		"sharp": "^0.32.6"
	},
	"devDependencies": {
		"@rollup/plugin-alias": "^5.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/figlet": "^1.5.7",
		"@types/node": "^20.8.7",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"eslint": ">=8.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"prettier": "^3.0.3",
		"rollup": "^4.1.4",
		"typescript": "^5.2.2",
		"wireit": "^0.14.0"
	}
}
